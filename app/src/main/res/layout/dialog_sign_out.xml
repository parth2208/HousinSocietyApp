<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_signOut"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="Do you want to Sign Out"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/dialog_signOut_btn"
        android:textColor="@color/white"
        android:layout_below="@id/dialog_signOut"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/delete_btn_background"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/white"
        android:id="@+id/signOut_cancel_btn"
        android:layout_below="@id/dialog_signOut"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/vehicle_add_btn_background"
        android:layout_marginEnd="15dp"
        android:textSize="18sp" />

</RelativeLayout>